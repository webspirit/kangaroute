<h1>Listing routes</h1>

<table>
  <thead>
    <tr>
      <th>Departure address</th>
      <th>Arrival address</th>
      <th>Departure lat</th>
      <th>Departure lng</th>
      <th>Arrival lat</th>
      <th>Arrival lng</th>
      <th>Departure distance range</th>
      <th>Arrival distance range</th>
      <th>Start time</th>
      <th>Time range from</th>
      <th>Time range to</th>
      <th>Active</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.departure_address %></td>
        <td><%= route.arrival_address %></td>
        <td><%= route.departure_lat %></td>
        <td><%= route.departure_lng %></td>
        <td><%= route.arrival_lat %></td>
        <td><%= route.arrival_lng %></td>
        <td><%= route.departure_distance_range %></td>
        <td><%= route.arrival_distance_range %></td>
        <td><%= route.start_time %></td>
        <td><%= route.time_range_from %></td>
        <td><%= route.time_range_to %></td>
        <td><%= route.active %></td>
        <td><%= route.user_id %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_route_path %>
