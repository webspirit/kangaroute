<h1>Listing routes</h1>

<table>
  <thead>
    <tr>
      <th>Departure address</th>
      <th>Arrival address</th>
      <th>Start time</th>
      <th>Available seats</th>
      <th>Comments</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.departure_address %></td>
        <td><%= ride.arrival_address %></td>
        <td><%= ride.departure_datetime %></td>
        <td><%= ride.available_seats %></td>
        <td><%= ride.comments %></td>
        <td><%= ride.user_id %></td>
        <td><%= link_to 'Show', ride %></td>
        <td><%= link_to 'Edit', edit_ride_path(ride) %></td>
        <td><%= link_to 'Destroy', ride, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Route', new_ride_path %>
